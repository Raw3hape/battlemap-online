{
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": ".",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/battlemap-online.html" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "KV_REST_API_URL": "@battlemap-kv-rest-api-url",
    "KV_REST_API_TOKEN": "@battlemap-kv-rest-api-token"
  }
}